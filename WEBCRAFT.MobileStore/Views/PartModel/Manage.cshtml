@model PartModelViewModel
@{
    ViewBag.Title = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Mode</h2>

@using (Html.BeginForm("Manage", "PartModel", FormMethod.Post))
{
    <div>
        <div class="form-group">
            @Html.LabelFor(p => p.ModelName)
            @Html.TextBoxFor(b => b.PartModel.Name, new { @Class = "form-control" })
        </div>

        <div class="form-group">

            Brand Name 

            @*@Html.LabelFor(p => p.Brands)*@
            @*@Html.DropDownListFor(b => b.Brands.ToList() , new SelectList(Model.PartModel.brand.Name.ToList()), new { @Class = "form-control" })*@
        </div>

        @Html.HiddenFor(b => b.PartModel.Id)

        <div class="form-group">
            <input type="submit" value="@ViewBag.Mode" class="btn btn-primary" />
        </div>
    </div>
}
