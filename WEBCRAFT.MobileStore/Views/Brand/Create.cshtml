@model BrandVeiwModels
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Mode</h2>

@using (Html.BeginForm("Manage", "Brand", FormMethod.Post))
{
    <div>
        <div class="form-group">
            @Html.LabelFor(b => b.BrandName)
            @Html.TextBoxFor(b => b.Brand.Name, new { @Class = "form-control" })
        </div>
        @Html.HiddenFor(b => b.Brand.Id)

        <div class="form-group">
            <input type="submit" value="@ViewBag.Mode" class="btn btn-primary" />
        </div>
    </div>
}